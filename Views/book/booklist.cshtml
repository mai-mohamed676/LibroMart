
@{
    ViewData["Title"] = "booklist";
}

<h1>booklist</h1>
<table class="table table_borderd">
    
@foreach(book item in Model){
    <tr>
            <td>@item.Name</td>
           <td>@item.Price</td>
           <td>@item.Description</td>
       <td><img src="/images/@item.image" style="width:100px"/></td>
           <td><a href="/book/Details/@item.Id">Details</a></td>
    

   </tr>
}

</table>
